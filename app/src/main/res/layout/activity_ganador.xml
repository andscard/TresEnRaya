<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text='Nombre Jugador "X" :'
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="47dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="47dp"
        android:id="@+id/textView"
        android:textStyle="normal|bold" />

    <TextView
        android:text='Nombre Jugador "O" :'
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="101dp"
        android:id="@+id/textView2"
        android:textStyle="normal|bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/tv_userX"
        android:layout_alignEnd="@+id/tv_userX"
        android:layout_marginTop="32dp"
        android:id="@+id/tv_userO" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:id="@+id/tv_userX"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/bt_sig"
        android:layout_alignEnd="@+id/bt_sig" />

    <Button
        android:text="SIGUIENTE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_sig"
        android:layout_marginLeft="87dp"
        android:layout_marginStart="87dp"
        android:layout_below="@+id/tv_userO"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="76dp" />
</RelativeLayout>